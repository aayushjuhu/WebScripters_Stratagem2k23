<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Coupons</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body class="coup1">
    <div class="midbox">
      <h1 style="text-align: center; margin-bottom: 30px; margin-top: 20px">
        Coupon List
      </h1>
      <table>
        <thead>
          <tr>
            <th style="width: 280px; font-size: 15px">Coupon ID</th>
            <th style="width: 150px; font-size: 15px">Coupon Code</th>
            <th style="width: 150px; font-size: 15px">Redemption limit</th>
            <th style="width: 150px; font-size: 15px">Discount type</th>
            <th style="width: 150px; font-size: 15px">Coupon type</th>
            <th style="width: 150px; font-size: 15px">Discount Number</th>
            <th style="width: 150px; font-size: 15px; margin-right: 10px">
              Expiry
            </th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% for(var i = 0 ; i< coupons.length ;i++) {%>

          <tr>
            <td style="text-align: center; font-size:15px"><%= coupons[i]._id %></td>
            <td style="text-align: center; font-size:15px"><%= coupons[i].code %></td>
            <td style="text-align: center; font-size:15px">
              <%= coupons[i].redemptionLimit %>
            </td>
            <td style="text-align: center; font-size:15px"><%= coupons[i].discountType %></td>
            <td style="text-align: center; font-size:15px"><%= state %></td>
            <td style="text-align: center; font-size:15px">
              <%= coupons[i].discount_number %>
            </td>
            <td class="warning" style="text-align: center">
              <%= coupons[i].expiry %>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </body>
</html>