  <body>
    <main class="container" mt="5"><%- include('../partials/flash')%></main>
    <nav class="navbar">
      <img src="/images/logo.png" width="200px  " alt="logo" />
      <div class="pages">
        <span class="page"><a href="/" class="active">Home</a></span>
        <span class="page"><a href="/register">Register</a></span>
      </div>
    </nav>
    <img
      src="/images/Coupon.png"
      width="1000px"
      alt="coupon"
      style="transform: rotate(350deg); margin-top: -100px"
    />
    <div class="form">
      <h2>Login</h2>
      <form
        method="POST"
        novalidate
        onsubmit="return validate() "
        action="/login"
      >
        <div class="element">
          <label for="username">Username</label>
          <input
            type="username"
            name="username"
            id="username"
            autofocus
            required
          />
          <span class="text-center fs-5" id="error1"></span>
        </div>
        <div class="element">
          <label for="password">Password</label>
          <input type="password" name="password" id="password" required />
          <span class="text-center fs-5" id="error2"></span>
        </div>
        <button type="submit" id="btn-submit">Login</button>
      </form>
    </div>

